---
import getLanguageFile from "../../internationalization";
const { lang = "es" } = Astro.props;

const {
  index: {
    basic: { location },
  },
} = getLanguageFile(lang);
---

<div
  class="flex flex-col justify-center items-center h-full w-full bg-gradient-to-tr from-black via-cyan-950 to-black gsap-slidein"
>
  <p class="text-white/50">{location}</p>
  <p
    class="text-3xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-purple-200 to-slate-500 gsap-fadein"
  >
    Medellin, Colombia
  </p>
</div>
