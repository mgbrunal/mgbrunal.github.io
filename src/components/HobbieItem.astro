---
interface Props {
  author: string;
  name: string;
  link: string;
}

const { author, name, link } = Astro.props;
---

<a href={link} target="_blank">
    <div
      class="flex flex-col justify-between items-center w-full rounded-lg p-5
    border border-dotted border-black bg-black/50 hover:bg-black"
    >
      <h3 class="text-lg text-white font-bold text-center">{name}</h3>
      <p class="text-sm text-white/50 italic">{author}</p>
    </div>
  </a>
