---
const items = [
    {
        title: "Análisis",
        description:
            "Entendemos el contexto del negocio y los objetivos reales.",
    },
    {
        title: "Definición",
        description:
            "Determinamos qué tipo de página web y qué procesos conviene automatizar.",
    },
    {
        title: "Diseño",
        description:
            "Estructuramos la experiencia del usuario y los flujos internos.",
    },
    {
        title: "Implementación",
        description: "Construimos, conectamos y probamos todo el sistema.",
    },
    {
        title: "Puesta en marcha",
        description: "Entregamos una solución lista para operar y escalar.",
    },
];
---

<div class="w-full h-full flex flex-col items-center justify-center py-[200px]">
    <div class="w-full h-full sm:max-w-[60%] sm:px-20">
        <div
            class="w-full h-full flex flex-col items-start justify-center gap-12"
        >
            <div
                class="w-full flex flex-col items-center justify-center gap-4 text-center"
            >
                <p class="text-sm sm:text-base font-light text-white uppercase">
                    Nuestro proceso
                </p>

                <div class="w-full bg-tertiary px-5 py-4">
                    <h1
                        class="text-4xl sm:text-6xl font-bold text-black drop-shadow"
                    >
                        Cómo trabajamos cada proyecto
                    </h1>
                </div>
            </div>

            <div class="w-full flex flex-col items-center justify-start mt-20">
                {
                    items.map(({ title, description }, i) => (
                        <div class="flex flex-row items-center justify-center odd:flex-row-reverse gap-2 w-full h-full my-12 sticky top-10 bg-black rounded-lg border-2 border-tertiary">
                            <div class="w-full h-full p-5 overflow-hidden">
                                <img
                                    src="https://picsum.photos/1000"
                                    alt={title}
                                    class="w-auto h-auto object-contain"
                                />
                            </div>

                            <div class="w-full h-full flex flex-col justify-center items-start px-5">
                                <h3 class="text-2xl sm:text-3xl font-medium text-white">
                                    {`${i + 1}. ${title}`}
                                </h3>
                                <p class="text-sm sm:text-base font-light text-primary">
                                    {description}
                                </p>
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
    </div>
</div>
