---
import Analyze from "../../assets/icons/Analyze.astro";
import Design from "../../assets/icons/Design.astro";
import Develop from "../../assets/icons/Develop.astro";
import Rocket2 from "../../assets/icons/Rocket2.astro";
import Validation from "../../assets/icons/Validation.astro";

const items = [
    {
        title: "Análisis",
        description:
            "Entendemos el contexto del negocio y los objetivos reales.",
    },
    {
        title: "Definición",
        description:
            "Determinamos qué tipo de página web y qué procesos conviene automatizar.",
    },
    {
        title: "Diseño",
        description:
            "Estructuramos la experiencia del usuario y los flujos internos.",
    },
    {
        title: "Implementación",
        description: "Construimos, conectamos y probamos todo el sistema.",
    },
    {
        title: "Puesta en marcha",
        description: "Entregamos una solución lista para operar y escalar.",
    },
];
---

<div
    class="w-full h-full flex flex-col items-center justify-center pt-20 pb-40"
>
    <div class="w-full h-full xl:max-w-[75%] px-10 sm:px-20">
        <div class="w-full h-full flex flex-col items-start justify-center">
            <div
                class="w-full flex flex-col items-center justify-center gap-4 text-center sticky top-5"
            >
                <p
                    class="text-sm sm:text-base font-light text-black uppercase animate-pulse"
                >
                    Nuestro proceso
                </p>

                <div class="w-full bg-tertiary px-5 py-4">
                    <h1
                        class="text-4xl sm:text-6xl font-bold text-black drop-shadow"
                    >
                        Cómo trabajamos cada proyecto
                    </h1>
                </div>
            </div>

            <div class="w-full flex flex-col items-center justify-start">
                {
                    items.map(({ title, description }, i) => (
                        <div
                            class="flex flex-col sm:flex-row items-center justify-center gap-2 w-full h-[50vh] mt-20 sticky bg-primary rounded-lg shadow shadow-black overflow-hidden"
                            style={{
                                top: `${200 + i * 10}px`,
                                marginLeft: `${i * 10}px`,
                            }}
                        >
                            <div class="w-[300px] h-[300px] sm:w-[600px] sm:h-[600px] absolute bottom-0 sm:top-0 right-0 flex flex-col justify-center items-center opacity-10">
                                {i === 0 && <Analyze color="#000" />}
                                {i === 1 && <Validation color="#000" />}
                                {i === 2 && <Design color="#000" />}
                                {i === 3 && <Develop color="#000" />}
                                {i === 4 && <Rocket2 color="#000" />}
                            </div>

                            <div class="w-full h-full flex flex-col justify-center items-start px-5 z-10">
                                <h3 class="text-2xl sm:text-4xl font-medium text-tertiary">
                                    {`${i + 1}. ${title}`}
                                </h3>
                                <p class="text-lg sm:text-xl font-light text-white">
                                    {description}
                                </p>
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
    </div>
</div>
