---
interface Props {
  imageURL: string;
  location: string;
  name: string;
  position: string;
  technologies: string[];
  timePeriod: string;
}

const { imageURL, location, name, position, technologies, timePeriod } =
  Astro.props;
---

<div
  class="flex flex-row justify-start items-start w-full gap-4 rounded-lg p-5
    border border-dotted border-black bg-black/50"
>
  <picture class="h-12 w-12 flex-none">
    <img
      src={imageURL}
      alt={`Logo of ${name}`}
      class="object-cover w-full h-full rounded-full"
    />
  </picture>
  <div class="flex flex-col flex-1 justify-start items-start">
    <div class="flex flex-row justify-start items-end gap-4">
      <h2 class="text-xl text-white font-bold">{name}</h2>
      <p class="text-base font-normal text-white/80">{location}</p>
      <p class="text-base font-normal text-white/80">({timePeriod})</p>
    </div>

    <div
      class="flex flex-col justify-start items-start text-base font-normal text-white/80"
    >
      <p class="font-bold">{position}</p>
      <ul>
        {technologies.map((tech) => <li>~ {tech}</li>)}
      </ul>
    </div>
  </div>
</div>
