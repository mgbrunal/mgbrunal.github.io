---
import profileImg from "../assets/img/profile.png";
import { Image } from "astro:assets";
---

<div
  class="flex flex-row md:flex-col justify-center items-center gap-4 rounded-lg p-5 h-full bg-gradient-to-br from-stone-800 to-black"
>
  <picture class="h-10 w-10 md:h-40 md:w-40 flex-none">
    <Image
      src={profileImg}
      alt="Profile"
      class="object-cover w-full h-full rounded-full"
      loading="eager"
    />
  </picture>
  <div class="w-max text-center">
    <h1
      class="animate-typing overflow-hidden whitespace-nowrap border-r-4 border-r-white pr-5 text-2xl md:text-3xl text-white font-bold"
      aria-label="Mauricio Garzón B."
    >
      Mauricio Garzón B.
    </h1>

    <p class="text-white/50">Full-Stack Web Developer</p>
  </div>
</div>
