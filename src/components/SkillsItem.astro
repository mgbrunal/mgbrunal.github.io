---
import Star from "../icons/Star.astro";

interface Props {
  level: number;
  name: string;
}

const { level, name } = Astro.props;
---

<div
  class="flex flex-row justify-between items-center w-full gap-4 rounded-lg p-5
    border border-dotted border-black bg-black/50"
>
  <h3 class="text-lg text-white font-bold">{name}</h3>
  <div class="flex gap-1 text-yellow-300 drop-shadow-lg">
    {[...Array(level)].map(() => <Star />)}
  </div>
</div>
