---
import Side from "../components/Side.astro";
import { ViewTransitions } from "astro:transitions";
import { SEO } from "astro-seo";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <SEO
      title={`${title} - Mauricio Garzon B.`}
      description="Personal website to "
      canonical="https://mgbrunal.github.io"
      openGraph={{
        basic: {
          title: `${title} - Mauricio Garzon B.`,
          type: "website",
          image:
            "https://media.licdn.com/dms/image/C4D03AQETLSMaC7f-WQ/profile-displayphoto-shrink_800_800/0/1649435378295?e=1712188800&v=beta&t=pYFUEe1cTBJ7ybLHxPdX5X29FVL79nZ0uuZaTCIm5co",
        },
      }}
      twitter={{
        creator: "@MGBrunal",
      }}
      extend={{
        link: [{ rel: "icon", href: "/favicon.svg" }],
        meta: [
          {
            name: "twitter:image",
            content:
              "https://pbs.twimg.com/profile_images/1518628760802766852/g_FmLFG9_400x400.jpg",
          },
          { name: "twitter:title", content: "MGBrunal" },
          { name: "twitter:description", content: "Web developer" },
        ],
      }}
    />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <ViewTransitions fallback="none" />
  </head>
  <body>
    <div
      class="min-h-screen lg:h-screen max-w-screen bg-gradient-to-r from-slate-900 via-purple-900 to-slate-900"
    >
      <div
        class="h-auto lg:h-screen p-3 gap-3 grid grid-cols-1 lg:grid-cols-12"
      >
        <div class="lg:col-span-4 p-3 backdrop-blur-sm bg-black/30 rounded-lg">
          <Side />
        </div>
        <div
          class="lg:col-span-8 p-3 backdrop-blur-sm bg-black/30 rounded-lg overflow-x-hidden overflow-y-auto"
        >
          <slot />
        </div>
      </div>
    </div>
  </body>
</html>
