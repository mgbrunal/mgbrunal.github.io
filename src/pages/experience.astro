---

<Layout title="Experience & Education">
  <div
    class="flex flex-row justify-start items-center p-5 rounded-lg gap-4 bg-gradient-to-br from-stone-800 to-black"
  >
    <BackButton />
    <h1
      class="text-2xl md:text-4xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-purple-200 to-slate-500"
      transition:name="experience number"
    >
      {`${new Date().getFullYear() - 2020}+ years of experience`}
    </h1>
  </div>

  <div
    class="flex flex-col justify-start items-center rounded-lg gap-2 py-2 overflow-y-auto"
  >
    {
      items.map((item) => (
        <ExperienceItem
          image={item.image}
          location={item.location}
          name={item.name}
          position={item.position}
          technologies={item.technologies}
          timePeriod={item.timePeriod}
        />
      ))
    }
  </div>

  <div
    class="flex flex-row justify-start items-center p-5 rounded-lg gap-4 bg-gradient-to-br from-stone-800 to-black"
  >
    <BackButton />
    <h1
      class="text-2xl md:text-4xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-purple-200 to-slate-500"
    >
      Education & Courses
    </h1>
  </div>

  <div class="flex flex-col justify-start items-center rounded-lg gap-2 py-2">
    {
      courses.map((item) => (
        <EducationItem
          image={item.image}
          institution={item.institution}
          name={item.name}
          timePeriod={item.timePeriod}
        />
      ))
    }
  </div>
</Layout>
