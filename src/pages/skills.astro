    level: 4,
  },
];

const BE_items = [
  {
    name: "Node.js",
    level: 5,
  },
  {
    name: "Express.js",
    level: 5,
  },
  {
    name: "NestJS",
    level: 4,
  },
  {
    name: "Apollo GraphQL",
    level: 4,
  },
  {
    name: "Bases de Datos SQL",
    level: 4,
