    level: 4,
  },
  {
    name: "Vocabulario Profesional",
    level: 5,
  },
  {
    name: "Auto-demanda",
    level: 5,
  },
];

const platforms = [
  {
    name: "Desarrollo Web Personalizado",
    level: 5,
  },
  {
    name: "Desarrollo en Webflow",
    level: 4,
  },
  {
    name: "Desarrollo de Aplicaciones Móviles iOS/Android",
    level: 5,
  },
];

const examples = [
  {
    name: "Mediser IPS",
    url: "https://mediserips.com",
  },
  {
    name: "Skimmer",
    url: "https://www.getskimmer.com/",
  },
  {
    name: "Historic Lodging",
